<h2>Changer votre mot de passe</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(Minimum <%= @minimum_password_length %> caract√®res)</small>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Changer mon mot de passe", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
